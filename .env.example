# OpenAPI Chat Agent - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================
# CRITICAL: Generate a secure secret key for JWT tokens
# Run: openssl rand -base64 32
SECRET_KEY=your-super-secret-jwt-key-here-min-32-chars

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12
JWT_ISSUER=openapi-chat-agent
JWT_AUDIENCE=openapi-chat-agent-users

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL Database
POSTGRES_DB=openapi_chat_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here

# Database URL (auto-constructed from above values in docker-compose)
DATABASE_URL=postgresql+asyncpg://postgres:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DATABASE_ECHO=false

# =============================================================================
# PgAdmin Configuration
# =============================================================================
PGADMIN_DEFAULT_EMAIL=admin@your-domain.com
PGADMIN_DEFAULT_PASSWORD=your-secure-pgadmin-password-here

# =============================================================================
# Google ADK Configuration
# =============================================================================
# Your Google Gemini API Key - Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-gemini-api-key-here
ADK_MODEL_PROVIDER=gemini
ADK_MODEL_NAME=gemini-2.5-flash

# =============================================================================
# Platform Configuration
# =============================================================================
PLATFORM_NAME=OpenAPI Chat Agent
PLATFORM_VERSION=1.0.0
ADMIN_EMAIL=admin@your-domain.com
